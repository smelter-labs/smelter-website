{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [".vercel", "dist", "packages"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/*.css", "**/*.d.ts"],
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": "warn"
      },
      "complexity": {
        "noBannedTypes": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "bracketSameLine": true,
      "trailingCommas": "es5",
      "lineWidth": 100
    }
  },
  "overrides": [
    {
      "include": ["src/content/docs/ts-sdk/**/examples/**/*.tsx"],
      "formatter": {
        "lineWidth": 75
      }
    }
  ]
}
