---
import ContactForm from "../components/ContactForm.astro";
import CapabilitiesSection from "../components/home/capabilities/CapabilitiesSection.astro";
import HeroSection from "../components/home/hero/HeroSection.astro";
import LicenseSection from "../components/home/license/LicenseSection.astro";
import TestimonialsSection from "../components/home/testimonials/TestimonialsSection.astro";
import UsageSection from "../components/home/usage/UsageSection.astro";
import UseCasesSection from "../components/home/use-cases/UseCasesSection.astro";
import UtilitySection from "../components/home/utilities/UtilitySection.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout canonicalUrl="https://smelter.dev">
  <main class="flex justify-center min-h-screen w-full overflow-clip">
    <div class="w-full max-w-[1536px] relative">
      <HeroSection />
      <CapabilitiesSection />
      <LicenseSection />
      <UsageSection />
      <UseCasesSection />
      <UtilitySection />
      <TestimonialsSection />
      <ContactForm server:defer />
    </div>
  </main>
</MainLayout>
