---
import { Image } from "astro:assets";

import type { ImageMetadata } from "astro";
import flash from "../../assets/use-cases/flash.svg";

interface Props {
	header: string;
	subHeader: string;
}

const { header, subHeader } = Astro.props;
---

<div class:list={['sticky top-28 items-center']}>
  <div
  class:list={
    'w-full rounded-[calc(2rem-1px)] bg-useCases-tileBackgroundOpacity border-gradient overflow-clip'
    }>
    <div class="-z-10 bg-useCases-tileBackground rounded-[calc(2rem-1px)] h-full w-full absolute">
    </div>
    <div class="flex flex-col justify-between p-10 text-center">
      <div class="flex flex-col gap-y-2">
        <h3 class="text-useCases-tileHeader">{header}</h3>
        <p class="text-useCases-tileSubheader">{subHeader}</p>
      </div>
    </div>
  </div>
</div>
