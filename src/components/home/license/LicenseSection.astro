---
import { Image, type LocalImageProps } from "astro:assets";
import LicenseTile from "./LicenseTile.astro";

import offline from "../../../assets/capabilities/offline.svg";
import online from "../../../assets/capabilities/online.svg";
import trial from "../../../assets/capabilities/trial.svg";
import LicenseTile2 from "./LicenseTile2.astro";

const LICENSE_TIERS = [
  {
    label: "Offline processing",
    text: "Enjoy free use of Smelter for all offline tasks, including pre-recorded video processing and batch operations.",
    icon: offline,
  },
  {
    label: "Online processing",
    text: `<p>While Smelter offers free offline processing, certain use cases require a commercial license:</p>
        <ul class="list-disc pl-4 flex flex-col gap-4 mt-2">
          <li><strong>SaaS Operations:</strong> If you operate a SaaS platform utilizing Smelter for programmatic video control.</li>
          <li><strong>Product Distribution:</strong> If you embed Smelter within software or hardware products intended for sale.</li>
          <li><strong>License Limits:</strong> If your usage exceeds the limits specified in the free license.</li>
        </ul>`,
    icon: online,
  },
  {
    label: "Trial",
    text: "If you're new to Smelter, you can explore it with a 90-day trial for all use-cases â€“ no strings attached!",
    icon: trial,
  },
] as const;
---

<section class="flex min-h-screen flex-col items-center justify-center gap-y-12 mx-4 sm:mx-8 xl:mx-40 2xl:h-fit 2xl:min-h-[unset] 2xl:py-40">
    <div class="justify-center text-center">
        <h2 class="mb-6 text-homeLicense-header">Pricing</h2>
        <p class="text-homeLicense-subheader text-center">
            Smelter is free to use excluding some enterprise-scale business applications.
        </p>
    </div>

    <div class="flex flex-col gap-y-6 w-full">
      <div class="h-full flex-1 rounded-4xl border border-capabilities-border p-10">
        <div class="flex items-center gap-4 mb-8">
          <div class="flex grow aspect-square w-14 h-14 max-w-14 max-h-14 rounded-2xl border border-homeLicense-border overflow-clip md:w-16 md:h-16 md:max-w-16 md:max-h-16">
            <div class="gradient-light-3 w-full h-full aspect-square">
              <div class="flex items-center justify-center p-3 md:p-4">
                <Image src={offline} alt="capability icon" class="w-full h-full object-cover" />
              </div>
            </div>
          </div>
          <div class="flex">
            <h2 class="text-capabilities-header text-start">Free</h2>
          </div>
        </div>
        <div class="flex flex-row">
          <div class="text-capabilities-text flex flex-col flex-1 pr-10 pl-4">
            <h3>Offline processing</h3>
            <p class="mt-4">Combine mp4 files using React components. Enrich everything with styling and effects.</p>
          </div>
          <div class="text-capabilities-text flex flex-col flex-1 px-10">
            <h3>Live processing</h3>
            <ul class="list-disc pl-4 flex flex-col gap-2 mt-4">
              <li>Compose mp4 files.</li>
              <li>Add some water.</li>
              <li>Mix everything together.</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="h-full flex-1 rounded-4xl border border-capabilities-border p-10">
        <div class="flex items-center gap-4 mb-8">
          <div class="flex grow aspect-square w-14 h-14 max-w-14 max-h-14 rounded-2xl border border-homeLicense-border overflow-clip md:w-16 md:h-16 md:max-w-16 md:max-h-16">
            <div class="gradient-light-3 w-full h-full aspect-square">
              <div class="flex items-center justify-center p-3 md:p-4">
                <Image src={offline} alt="capability icon" class="w-full h-full object-cover" />
              </div>
            </div>
          </div>
          <div class="flex">
            <h2 class="text-capabilities-header text-start">Enterprise</h2>
          </div>
        </div>
        <div class="flex flex-row">
          <div class="text-capabilities-text flex flex-col flex-1 pr-10">
            <ul class="list-disc pl-4 flex flex-col gap-4">
              <p><strong>SaaS Operations:</strong> If you operate a SaaS platform utilizing Smelter for programmatic video control.</p>
              <p><strong>Product Distribution:</strong> If you embed Smelter within software or hardware products intended for sale.</p>
              <p><strong>License Limits:</strong> If your usage exceeds the limits specified in the free license.</p>
            </ul>
          </div>
          <div class="text-capabilities-text flex flex-col flex-1 px-10">
            <h3>Trial</h3>
          </div>
        </div>
      </div>
  </div>
