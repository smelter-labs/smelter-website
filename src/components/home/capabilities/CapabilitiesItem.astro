---
import { Image, type LocalImageProps } from "astro:assets";

interface Props {
  label: string;
  text: string;
  icon: LocalImageProps["src"];
}

const { label, text, icon } = Astro.props;
---

<div class="h-fit rounded-4xl border border-capabilities-border p-10">
  <div class="flex items-center mb-6 gap-4">
    <div class="flex grow aspect-square w-14 h-14 max-w-14 max-h-14 rounded-2xl border border-capabilities-border overflow-clip md:w-16 md:h-16 md:max-w-16 md:max-h-16">
      <div class="gradient-red-1 w-full h-full aspect-square">
        <div class="flex items-center justify-center p-3 md:p-4">
          <Image src={icon} alt="capability icon" class="w-full h-full object-cover" />
        </div>
      </div>
    </div>
    <div class="flex">
      <h3 class="text-capabilities-header text-start">{label}</h3>
    </div>
  </div>
  <p class="par-l text-capabilities-text text-start">{text}</p>
</div>
