---
import { Image } from 'astro:assets';

const { header, subHeader, image, active } = Astro.props;
---

<div
  class:list={[
    'flex flex-1 rounded-4xl p-px bg-useCases-borderInactive',
    active && 'bg-gradient-to-b from-useCases-borderFrom to-useCases-borderTo',
  ]}>
  <div class="bg-useCases-background w-full rounded-[calc(2rem-1px)]">
    <div class="flex flex-col justify-between p-10 text-center">
      <div class="flex flex-col gap-y-2">
        <h3 class="text-useCases-header">{header}</h3>
        <p class="text-useCases-subHeader">{subHeader}</p>
      </div>
      <div class="mt-6">
        <Image src={image} alt={`${header} image`} class="aspect-video w-full" />
      </div>
    </div>
  </div>
</div>
