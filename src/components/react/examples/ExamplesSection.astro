---
import Broadcast from "../../../assets/examples/news.webp";
import StreamingApp from "../../../assets/examples/streaming-app.webp";
import VideoConference from "../../../assets/examples/video-conference.webp";

import ExampleItem from "./ExampleItem.astro";
const EXAMPLES = [
  {
    uri: '/demos/streaming-app-setup',
    text: "Streaming application",
    image: StreamingApp
  },
  {
    uri: '/demos/broadcast',
    text: "News broadcast",
    image: Broadcast,
  },

  {
    uri: '/demos/video-conference',
    text: "Video call",
    image: VideoConference
  },
] as const;
---

<section id="examples" class="px-4 flex flex-col items-center relative sm:mb-28 py-40 text-center lg:px-8 xl:px-40">
  <h2 class="mb-2 text-capabilities-header">Explore our live examples</h2>
  <p class="par-l text-capabilities-subheader">See what you can compose in your browser using Smelter</p>
  <div class="flex w-full gap-6 overflow-hidden relative flex-col sm:flex-row mt-12 sm:mt-20">
    <div class="flex w-full flex-col sm:flex-row gap-x-4 lg:gap-x-8">
      {
        EXAMPLES.map(example => (
          <ExampleItem {...example} />
        ))
      }
    </div>
  </div>
</section>
