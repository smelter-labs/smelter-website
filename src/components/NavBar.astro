---
import { Image } from 'astro:assets';
import compositorLogo from '../assets/compositor-logo.svg';
---

<header>
  <nav class="flex h-20 justify-between px-20">
    <Image src={compositorLogo} alt="compositor logo" class="fill-nav-icon" />
  </nav>
</header>

<style>
  li {
    border-top: 1px solid #eee;
    position: relative;
  }

  .by,
  .text {
    font-size: 0.9em;
    margin: 1em 0;
  }

  .by {
    color: rgb(51 65 85);
  }

  .by a {
    color: rgb(51 65 85);
    text-decoration: underline;
  }

  .text {
    overflow-wrap: break-word;
  }

  .text :global(a:hover) {
    color: #335d92;
  }

  .text :global(pre) {
    white-space: pre-wrap;
  }
</style>
